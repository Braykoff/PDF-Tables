{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "noEmit": true,
    // Typescript checking config:
    "noUncheckedIndexedAccess": true,
    "useDefineForClassFields": true,
    // ESLint will check for unused variables:
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src",
    "scripts"
  ]
}